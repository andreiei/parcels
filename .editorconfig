root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
max_line_length = 120

[{*.tf, *.tfvars, *.hcl}]
ij_hcl-terraform_property_alignment = 2
ij_hcl_property_alignment = 2
ij_hcl-terraform_space_after_comma = true
ij_hcl_space_after_comma = true

[Makefile]
indent_style = tab

[*.{kt,kts}]
indent_size = 4

[*.tf]
indent_size = 2

[*.yaml]
indent_size = 4
